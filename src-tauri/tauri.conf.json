{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DashLayer",
  "version": "0.1.0",
  "identifier": "com.cognima.dashlayer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "DashLayer - Widget Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true
      },
      {
        "label": "widget-template",
        "title": "Widget",
        "width": 300,
        "height": 200,
        "minWidth": 100,
        "minHeight": 50,
        "center": false,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
